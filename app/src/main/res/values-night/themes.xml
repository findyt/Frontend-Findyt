<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Findyt" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:fontFamily">@font/inderregular</item>
    </style>

    <style name="Theme.Findyt" parent="Base.Theme.Findyt" />


    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ProfileLabel" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#424242</item>
    </style>

    <style name="ProfileCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="cardCornerRadius">100dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="ProfileCardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="ProfileCardText" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ProfileEditIcon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ActionButton" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardBackgroundColor">#FFF59D</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">8dp</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="ActionButton.Main">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="ActionButton.Side">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <style name="ActionButtonIcon">
        <item name="android:layout_gravity">center</item>
        <item name="tint">@android:color/black</item>
    </style>

    <style name="ActionButtonIcon.Main">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="ActionButtonIcon.Side">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>


</resources>
